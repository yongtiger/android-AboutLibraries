    <style name="AboutLibrariesTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AboutLibrariesTheme.Light.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
